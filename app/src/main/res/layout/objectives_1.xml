<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/animationView"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:scaleType="fitXY"
                    app:lottie_rawRes="@raw/objectives"
                    app:lottie_speed="1"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"/>
                <ImageButton
                    android:id="@+id/btn_objectives_close"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:background="@null"
                    android:contentDescription="button_close"
                    android:src="@drawable/ic_close" />
                <TextView
                    android:text="Objectives"
                    android:textColor="#3f2570"
                    android:textSize="18sp"
                    android:layout_marginTop="190dp"
                    android:gravity="center"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/geologica_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"/>
            </RelativeLayout>
            <TextView
                android:text="This lesson covers the addition and subtraction of simple fractions and mixed numbers with or without regrouping."
                android:textSize="16sp"
                android:fontFamily="@font/geologica_regular"
                android:paddingHorizontal="10dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:orientation="horizontal"
                android:paddingHorizontal="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="✦"
                    android:textSize="16sp"
                    android:textColor="#3f2570"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="Add and Subtract simple fractions with or without re-grouping;"
                    android:paddingStart="10dp"
                    android:textSize="16sp"
                    android:fontFamily="@font/geologica_regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:paddingHorizontal="10dp"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="✦"
                    android:textSize="16sp"
                    android:textColor="#3f2570"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="Add and Subtract mixed numbers without or with re-grouping;"
                    android:textSize="16sp"
                    android:paddingStart="10dp"
                    android:fontFamily="@font/geologica_regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <Button
                android:id="@+id/btn_lets_get_started"
                android:text="Lets Get Started!"
                android:textAllCaps="false"
                android:fontFamily="@font/geologica_regular"
                android:textColor="@color/white"
                android:background="@drawable/btn_objectives_button"
                android:drawablePadding="10dp"
                android:layout_marginBottom="16dp"
                android:layout_marginHorizontal="16dp"
                android:paddingHorizontal="16dp"
                android:layout_width="match_parent"
                android:layout_height="48dp"/>
            <!--<View
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:background="#3f2570"/>-->
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>