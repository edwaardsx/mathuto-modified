<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#303030"
    android:orientation="vertical"
    tools:context=".quiz.summary.Summary1">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:elevation="10dp"
        android:background="#303030">
        <Button
            android:id="@+id/btn_back"
            android:background="@null"
            android:drawableStart="@drawable/btn_back_secondary"
            android:layout_width="48dp"
            android:layout_height="?attr/actionBarSize"
            android:contentDescription="back button"/>
        <TextView
            android:text="Summary Result"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginHorizontal="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_progress"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textAlignment="textStart"
            tools:text="Question 3/10" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:paddingHorizontal="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="#424242"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_question"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:fontFamily="@font/geologica_regular"
                android:gravity="center"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="200dp"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <RelativeLayout
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_option_one"
                android:background="@drawable/quiz_default_option_border_bg"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="5dp"
                android:gravity="center"
                android:padding="15dp"
                android:text="Option 1"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="60dp"/>
            <TextView
                android:id="@+id/tv_option_two"
                android:background="@drawable/quiz_default_option_border_bg"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="5dp"
                android:gravity="center"
                android:padding="15dp"
                android:text="Option 2"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="60dp"/>
            <TextView
                android:id="@+id/tv_option_three"
                android:background="@drawable/quiz_default_option_border_bg"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="5dp"
                android:gravity="center"
                android:padding="15dp"
                android:text="Option 3"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="60dp"/>
            <TextView
                android:id="@+id/tv_option_four"
                android:background="@drawable/quiz_default_option_border_bg"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="5dp"
                android:gravity="center"
                android:padding="15dp"
                android:text="Option 4"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="60dp"/>

            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/btn_back_previous_question"
                    android:visibility="invisible"
                    android:fontFamily="@font/geologica_bold"
                    android:background="@drawable/btn_secondary_button"
                    android:text="BACK"
                    android:drawableStart="@drawable/ic_chevron_left"
                    android:paddingHorizontal="10dp"
                    android:textColor="@color/black"
                    android:layout_marginEnd="8dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>
                <Button
                    android:id="@+id/btn_next"
                    android:fontFamily="@font/geologica_bold"
                    android:background="@drawable/btn_primary_button"
                    android:text="Next"
                    android:drawableEnd="@drawable/ic_chevron_right"
                    android:paddingHorizontal="16dp"
                    android:textColor="@color/white"
                    android:layout_marginStart="8dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>