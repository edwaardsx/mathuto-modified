<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F6F9"
    tools:context=".fragments.lesson19.WhatsNewFragment">

    <androidx.core.widget.NestedScrollView
        android:overScrollMode="never"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:paddingHorizontal="16dp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <Button
                    android:id="@+id/btn_tts"
                    android:text="Read Aloud"
                    android:fontFamily="@font/geologica_regular"
                    android:background="@drawable/btn_secondary_button"
                    android:drawableStart="@drawable/ic_text_to_speech"
                    android:textAllCaps="false"
                    android:drawablePadding="10dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp" />
            </LinearLayout>
            <TextView
                android:id="@+id/description_1"
                android:textColor="@color/black"
                android:text="Adding and subtracting decimal numbers is fun and easy to learn. The process is similar in adding or subtracting a whole number. Now, we want you to try solving the following word problems.\n\nRead and solve the word problem below.\n\nStory Problem 1: Find the sum.\n\nDolores bought these items at the bakeshop, a loaf bread for Php 35.50, peanut butter for Php 50.25, and a buko juice for Php 15.75. How much did she spend?"
                android:fontFamily="@font/geologica_regular"
                android:layout_marginTop="10dp"
                android:paddingHorizontal="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/example_1"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="example"
                android:layout_marginTop="10dp"
                android:src="@drawable/lesson_8_sample_3"/>
            <TextView
                android:id="@+id/description_2"
                android:textColor="@color/black"
                android:text="Story Problem 2: Finding the sums and differences.\n\nAntonia went shopping, she bought a pair of shoes for Php 95.34 and a pair of socks for Php 43.75. How much did she spend in all? How much change did she get from Php 500.00?"
                android:fontFamily="@font/geologica_regular"
                android:layout_marginTop="10dp"
                android:paddingHorizontal="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/example_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="example"
                android:background="@color/white"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:src="@drawable/lesson_8_sample_3_1"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</FrameLayout>